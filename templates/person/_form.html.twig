{{ form_start(form) }}
<nav>
    <div class="nav nav-tabs" id="nav-form-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-form-general-tab" data-toggle="tab" href="#form-general-tab"
           role="tab" aria-controls="form-general-tab" aria-selected="true">{{ 'Organization' | trans }}</a>
        <a class="nav-item nav-link" id="nav-form-thematic-tab" data-toggle="tab" href="#form-thematic-tab" role="tab"
           aria-controls="form-address-tab" aria-selected="false">{{ 'Thematic' | trans }}</a>
        <a class="nav-item nav-link" id="nav-form-address-tab" data-toggle="tab" href="#form-address-tab" role="tab"
           aria-controls="form-address-tab" aria-selected="false">{{ 'Address' | trans }}</a>
    </div>
</nav>
<div class="tab-content" id="nav-form-tabContent">
    <div class="tab-pane fade show active" id="form-general-tab" role="tabpanel"
         aria-labelledby="nav-form-general-tab">
        <div class="m-0  border border-top-0 p-2 pt-4">
            <div class="row">
                <div class="col-sm-8">
                    {{ form_row(form.familyName) }}
                    {{ form_row(form.birthName) }}
                    {{ form_row(form.givenName) }}
                    {{ form_row(form.category) }}
                    {{ form_row(form.jobTitle) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.memberOf) }}
                    {{ form_row(form.service) }}
                    {{ form_row(form.alumnus) }}
                    {{ form_row(form.nationality) }}
                    {{ form_row(form.gender) }}
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        {{ form_widget(form.facebook) }}
                        {{ form_help(form.facebook) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.instagram) }}
                        {{ form_help(form.facebook) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.linkedIn) }}
                        {{ form_help(form.linkedIn) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.twitter) }}
                        {{ form_help(form.twitter) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.youtube) }}
                        {{ form_help(form.youtube) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.url) }}
                        {{ form_help(form.url) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.smartphone) }}
                        {{ form_help(form.smartphone) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.telephone) }}
                        {{ form_help(form.telephone) }}
                    </div>
                </div>
            </div>
            <div class="text-right">
                <button class="btn btn-primary ml-2" type="submit">
                    <span class="fa fa-save"></span>
                    {{ 'action.save.text' | trans }}
                </button>
                <button class="btn btn-outline-secondary" type="button"
                        onclick="$('#nav-form-thematic-tab').tab('show');">
                    {{ 'action.next' | trans }}
                    <span class="fa fa-arrow-right"></span>
                </button>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="form-thematic-tab" role="tabpanel" aria-labelledby="nav-form-thematic-tab">
        <div class="m-0 border border-top-0 p-2 pt-4">
            {{ form_row(form.thematics) }}
            <div class="offset-sm-3 mt-0">
                <div class="d-flex justify-content-between">
                    <button class="ml-2 mt-0 btn btn-outline-secondary" type="button"
                            onclick="$('#nav-form-general-tab').tab('show');">
                        <span class="fa fa-arrow-left"></span>
                        {{ 'action.previous' | trans }}
                    </button>
                    <button class="ml-2 mt-0 btn btn-outline-secondary" type="button"
                            onclick="$('#nav-form-address-tab').tab('show');">
                        <span class="fa fa-arrow-right"></span>
                        {{ 'action.next' | trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
    {% include 'default/_form_address_tab.html.twig' with {'form': form} %}
</div>
{{ form_end(form) }}
