{{ form_start(form) }}
<nav>
    <div class="nav nav-tabs" id="nav-form-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-form-general-tab" data-toggle="tab" href="#form-general-tab"
           role="tab" aria-controls="form-general-tab" aria-selected="true">{{ 'Organization' | trans }}</a>
        <a class="nav-item nav-link" id="nav-form-address-tab" data-toggle="tab" href="#form-address-tab" role="tab"
           aria-controls="form-address-tab" aria-selected="false">{{ 'Address' | trans }}</a>
    </div>
</nav>
<div class="tab-content" id="nav-form-tabContent">
    <div class="tab-pane fade show active" id="form-general-tab" role="tabpanel"
         aria-labelledby="nav-form-general-tab">
        <div class="m-0  border border-top-0 p-2 pt-4">
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.familyName) }}
                    {{ form_row(form.birthName) }}
                    {{ form_row(form.givenName) }}
                    {{ form_row(form.category) }}
                    {{ form_row(form.jobTitle) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.gender) }}
                    {{ form_row(form.url) }}
                    {{ form_row(form.alumnus) }}
                    {{ form_row(form.memberOf) }}
                    {{ form_row(form.service) }}
                    {{ form_row(form.nationality) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.facebook) }}
                    {{ form_row(form.instagram) }}
                    {{ form_row(form.linkedIn) }}
                    {{ form_row(form.twitter) }}
                    {{ form_row(form.youtube) }}
                    {{ form_row(form.smartphone) }}
                    {{ form_row(form.telephone) }}
                </div>
            </div>
            <div class="text-right">
                <button class="btn btn-primary ml-2" type="submit">
                    <span class="fa fa-save"></span>
                    {{ 'action.save.text' | trans }}
                </button>
                <button class="btn btn-outline-secondary" type="button"
                        onclick="$('#nav-form-address-tab').tab('show');">
                    {{ 'action.next' | trans }}
                    <span class="fa fa-arrow-right"></span>
                </button>
            </div>
        </div>
    </div>
    {% include 'default/_form_address_tab.html.twig' with {'form': form} %}
</div>
{{ form_end(form) }}
