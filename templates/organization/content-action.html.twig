<a href="{{ path('organization_index') }}" data-toggle="tooltip" data-placement="bottom"
   title="{{ 'action.entity.list.title' | trans }}" class="btn btn-outline-primary">
    <span class="fa fa-building"></span>
    <span class="sr-only">{{ 'action.entity.list.text' | trans }}</span>
</a>
<a href="{{ path('organization_edit', {'id': organization.id}) }}" data-toggle="tooltip" data-placement="bottom"
   title="{{ 'action.entity.edit.text' | trans }}" class="btn btn-outline-secondary">
    <span class="fa fa-edit"></span>
    <span class="sr-only">{{ 'action.organization.edit.text' | trans }}</span>
</a>
{% if deletable %}
    <button class="btn btn-danger btn-mini confirm-delete" data-toggle="modal" data-target="#confirm-delete"
            data-form="form" data-placement="left" title="{{ 'action.entity.delete.title' | trans }}">
        <span class="fa fa-trash"></span>
        <span class="sr-only">{{ 'action.entity.delete.text' | trans }}</span>
    </button>
{% else %}
    <a href="#" title="" class="btn btn-outline-danger disabled">
        <span class="fa fa-trash"></span>
        <span class="sr-only">{{ 'action.entity.delete.text' | trans }}</span>
    </a>
{% endif %}
